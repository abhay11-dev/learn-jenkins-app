pipeline {
    agent any

    stages {
        stage('Docker') {
            agent{
                echo 'Inside Docker Agent'
                docker {
                    image 'node:18-alpine'
                    reuseNode true

                }
            }
            steps {
                echo 'Inside Docker Stage'
                sh ''' 
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }
    }
}
