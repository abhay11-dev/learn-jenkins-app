pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                echo 'Inside Docker Stage'
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                '''
            }
            steps{
                wcho "Build stage completed....."
            }
        }

        stage("Test"){
            steps{
                echo "Inside Test Stage"
                sh '''
                    test -f 'build/index.html'
                '''
            }
        }
    }
}
